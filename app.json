{
  "expo": {
    "name": "Mazag",
    "slug": "mazag",
    "scheme": "com.mazag.app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "androidStatusBar": {
      "translucent": true,
      "backgroundColor": "#FFFFFF"
    },
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#006FFF"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "requireFullScreen": true,
      "supportsTablet": true,
      "bundleIdentifier": "com.mazag.app",
      "jsEngine": "hermes",
      "newArchEnabled": true,
      "userInterfaceStyle": "automatic",
      "icon": {
        "dark": "./assets/dark-icon.png",
        "light": "./assets/icon.png",
        "tinted": "./assets/adaptive-icon.png"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#006FFF"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.mazag.app",
      "softwareKeyboardLayoutMode": "pan",
      "userInterfaceStyle": "automatic"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font"
    ],
    "notification": {
      "icon": "./assets/icon.png",
      "color": "#006FFF"
    },
    "experiments": {
      "typedRoutes": true,
      "tsconfigPaths": true
    },
    "jsEngine": "hermes",
    "newArchEnabled": true
  }
}